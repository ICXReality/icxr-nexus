{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2020",
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}